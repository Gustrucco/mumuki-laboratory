<%= render layout: 'layouts/exercise', locals: {current_tab: :my_submissions } do %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= t :submission_date %></th>
      <th><%= t :output %></th>
    </tr>
    </thead>

    <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= status_icon submission %> <%= link_to submission.created_at, [@exercise, submission] %></td>
        <td><%= submission.result_preview %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <% if @submissions.empty? %>
    <div class="text-center">
      <strong><%= t :no_submissions %></strong>
    </div>
  <% end %>

  <%= paginate @submissions %>
  <br>

  <div class="actions">
    <%= link_to t('new_submission'), exercise_path([@exercise]), class: 'btn btn-primary' %>
  </div>
<% end %>
