<h1>Submissions for exercise <%= link_to_exercise @exercise %></h1>

<table class="table">
  <thead>
  <tr>
    <th>Submission Date</th>
    <th>Status</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody>
  <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.created_at %></td>
        <td><%= submission.status %></td>
        <td><%= link_to 'Show', [@exercise, submission] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submission', new_exercise_submission_path([@exercise]) %>
