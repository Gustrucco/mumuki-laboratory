<% @current_tab = current_tab %>

<div class="row">
  <div class="col-md-12">
    <h1>
      <%= @guide.contextualized_name %>
      <small> - <%= @guide.language %></small>
    </h1>
    <h4><%= with_classifications  @guide %></h4>

    <% if @guide.path %>
      <p>
        <%= previous_nav_button(@guide) %>
        <span><%= link_to_path @guide.path %></span>
        <%= next_nav_button(@guide) %>
      </p>
    <% end%>

    <hr>
  </div>
</div>

<div class="row">
  <div class="col-md-10">
    <%= yield %>
  </div>
  <div class="col-md-2">
    <ul class="nav nav-tabs tabs-right vertical-text guide-nav">
      <li <%= active_if :overview %>>
        <%= link_to fa_icon('code',  text: t(:overview)), @guide %>
      </li>
      <li <%= active_if :exercises %>>
        <%= link_to fa_icon('trophy', text: t(:exercises)), guide_exercises_path(@guide) %>
      </li>
      <% restricted_to_author @guide do %>
        <li <%= active_if :history %>>
          <%= link_to fa_icon('history',text: t(:history)), guide_imports_path(@guide) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

