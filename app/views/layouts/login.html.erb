<script type="text/javascript">
  (function() {
    var lock = new Auth0Lock('<%= Rails.configuration.auth0_client_id %>', '<%= Rails.configuration.auth0_domain %>');
    function specialSignin() {
      lock.showSignin({
        closable: false,
        disableResetAction: false,
        connections: <%= raw Organization.login_methods %>,
        socialBigButtons: <%= Organization.few_login_methods? %>,
        dict: '<%= I18n.locale %>',
        icon: '/logo-alt.png',
        callbackURL: '<%= auth_auth0_callback_url %>', responseType: 'code', authParams: {
          scope: 'openid profile'
        }
      });
    }
    specialSignin();
  })()
</script>
