<%= bootstrap_form_for(@exercise) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.text_field :title %>
      </div>
      <div class="field form-group">
        <%= f.text_field :tag_list, class: 'form-control', 'data-role ' => 'tagsinput' %>
        <small><%= t('comma_or_tab_separated') %></small>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.collection_select(:language_id, Language.all, :id, :name, {}, class: 'form-control') %>
      </div>
      <div class="field form-group"><%# TODO extract %>
        <%= f.select(:locale, [['English', :en], ['EspaÃ±ol', :es]], {}, class: 'form-control') %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.text_area :description, rows: 12 %>
        <small><%= t('you_can_use_markdown_here_html') %></small>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.text_area :hint, rows: 12 %>
        <small><%= t :you_can_use_markdown_here_html %></small>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.text_area :test, class: 'form-control editor', rows: 15 %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.text_area :extra_code, class: 'form-control editor', rows: 15 %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <table class="table  table-bordered">
        <thead>
        <tr>
          <th><%= t :binding %></th>
          <th><%= t :inspection %></th>
        </tr>
        </thead>
        <tbody>
        <%= f.fields_for :expectations do |f| %>
          <tr>
            <td><%= f.text_field :inspection, hide_label: true %></td>
            <td><%= f.text_field :binding, hide_label: true %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="actions form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
