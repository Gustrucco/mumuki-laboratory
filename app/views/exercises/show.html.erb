<div class="row">

  <h1>
    <%= @exercise.title %>
    <small> - <%= @exercise.language %></small>
  </h1>

  <section>
    <p>
      <%= t :authored_by, author: @exercise.author.name %>
    </p>
  </section>

  <section>
    <%= taglist_tag @exercise.tag_list %>
  </section>

  <section>
    <p>
      <%= @exercise.description_html %>
    </p>
  </section>

  <% restricted_to_current_user @exercise do %>
      <section>
        <h2>Tests</h2>

        <p>
          <%= highlighted_code @exercise.language, @exercise.test %>
        </p>
      </section>
      <% if @exercise.guide %>
          <section>
            <h2><%= t(:guide).titleize %></h2>

            <p>
              <%= link_to @exercise.guide.name, guide_path(@exercise.guide) %>
            </p>
          </section>
      <% end %>
  <% end %>
</div>
<div class="row">
  <%= link_to t('new_submission'), new_exercise_submission_path(@exercise), class: 'btn btn-primary' %>
  <%= link_to t('my_submissions'), exercise_submissions_path(@exercise), class: 'btn btn-default' %>
  <% restricted_to_current_user @exercise do %>
      <%= link_to t('edit'), edit_exercise_path(@exercise), class: 'btn btn-default' %>
  <% end %>
</div>