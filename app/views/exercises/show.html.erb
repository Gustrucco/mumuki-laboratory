<%= render layout: 'layouts/exercise' do %>
  <div class="row">
    <div class="col-md-6 exercise-assignment">
      <div>
        <%= @exercise.description_html %>
      </div>
      <div>
        <% if @exercise.hint.present? %>
          <a data-toggle="collapse" href="#hint-section">
            <%= label :exercise, :hint %>
          </a>

          <div id="hint-section" class="collapse">
            <p>
              <%= @exercise.hint_html %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <% if current_user? %>
      <%= form_for([@exercise, @submission], remote: true, html: {role: 'form'}) do |f| %>
        <div class="col-md-6 ace-editor-col">
          <div class="field form-group">
            <%= f.text_area :content, class: 'form-control editor', value: @previous_submission_content, style: 'display: none' %>
            <%= hidden_field_tag(:exercise_language, @exercise.highlight_mode) %>
          </div>
          <div class="actions">
            <button class="btn btn-primary">
              <%= fa_icon :play, text: t(:create_submission) %>
            </button>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-md-12">
        <p><%= t :you_must_sign_in_before_submitting %></p>
        <div class="actions">
          <%= login_anchor class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
  <% if current_user? %>
    <div class="row submission-results">
      <% if @exercise.last_submission(current_user) %>
        <%= render partial: 'exercise_submissions/results', locals: {submission: @exercise.last_submission(current_user)} %>
      <% end %>
    </div>
  <% end %>

<% end %>

<% content_for :tail do %>
  <script>
    var resultsBox = $('.submission-results')
    $('form.new_submission').on('ajax:beforeSend',function (event, xhr, settings) {
      resultsBox.html('<%= escape_javascript raw %Q{<div class="alert alert-warning" role="alert"><i class="fa fa-refresh fa-spin"></i> #{t :processing_you_solution}<br><small>#{t :refresh_or_wait}</small></div>} %>')
    }).on('ajax:success', function (xhr, data, status) {
      resultsBox.html(data);
    });
  </script>
<% end %>

<%= content_for :no_container do %>
  <div class="modal fade" id="guide-done" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <h3 class="modal-title text-center" id="gridSystemModalLabel"><%= t :guide_finished, guide: @guide.name %> </h3>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-12">
                <%= corollary_box @guide %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 text-center">
                <h4><%= t :see_next_guides %></h4>
                <%= next_guides_box(@guide) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end if @guide %>
