<div class="row">

  <h1>
    <%= @exercise.title %> <small> - <%= @exercise.language %></small>
  </h1>

  <section>
    <%= taglist_tag @exercise.tag_list %>
  </section>

  <section>
    <p>
      <%= @exercise.description_html %>
    </p>
  </section>

  <% restricted_to_current_user @exercise do %>
      <section>
        <h2>Tests</h2>
        <p>
        <%= highlighted_code @exercise.language, @exercise.test %>
        </p>
      </section>
  <% end %>
</div>
<div class="row">
  <%= link_to t('my_submissions'), exercise_submissions_path(@exercise) %> 
  <%= link_to t('new_submission'), new_exercise_submission_path(@exercise) %> 
  <% restricted_to_current_user @exercise do %>
      <%= link_to t('edit'), edit_exercise_path(@exercise) %> 
  <% end %>
  <%= link_to t('all_exercises'), exercises_path %>
</div>