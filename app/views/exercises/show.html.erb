<div class="row">

  <h2>
    <%= @exercise.title %>
  </h2>

  <p>
    <%= @exercise.description %>
  </p>

  <% restricted_to_current_user @exercise  do %>
      <p>
        <strong>Test:</strong>
        <%= highlighted_code @exercise.language, @exercise.test %>
      </p>
  <% end %>

  <%= link_to 'My Submissions', exercise_submissions_path(@exercise) %> |
  <%= link_to 'New submission', new_exercise_submission_path(@exercise) %> |
  <% restricted_to_current_user @exercise do %>
      <%= link_to 'Edit', edit_exercise_path(@exercise) %> |
  <% end %>
  <%= link_to 'All exercises', exercises_path %>


</div>