<div class="col-md-offset-1 col-md-9">
  <h1><%= t :mumuki_catchphrase %></h1>

  <p><%= t :mumuki_short_description %></p>

  <hr>

  <% @chapters.each do |it| %>
    <div class="chapter">
      <h3><%= t(:chapter_number, number: it.number) %> <%= it.name %></h3>
      <div class="row">
        <div class="col-md-9">
          <%= it.description_html %>
        </div>
        <div class="col-md-3">
          <a href="<%= guide_path(it.first_guide) %>" class="btn btn-success pull-right">
            <%= t(:start_practicing) %>
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>