<h2 class="text-center"><%= t :chapters_index_title %></h2>

<br>

<% @chapters.each do |it| %>
  <div class="text-center chapter">
    <h3><%= t(:chapter_number, number: it.number) %> <%= it.name %></h3>

    <hr>

    <p>
      <%= it.description_html %>
    </p>
    <a href="<%= guide_path(it.first_guide) %>" class="btn btn-success">
      <%= t(:start_practicing) %>
    </a>
  </div>
<% end %>