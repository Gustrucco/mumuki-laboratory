<%= content_for :breadcrumbs do %>
  <%= breadcrumbs @chapter %>
<% end %>

<div>
  <h1><%= t(:chapter_number, number: @chapter.number) %> <%= @chapter.name %></h1>

  <%= @chapter.long_description_html || @chapter.description_html %>

  <div class="actions">
    <a href="<%= lesson_path(@chapter.first_lesson) %>" class="btn btn-success">
      <%= t(:start_practicing) %>
    </a>
  </div>
</div>
<div>
  <h3><%= t(:content) %></h3>

  <% @chapter.lessons.each do |lesson| %>
    <h4><%= t(:lesson_number, number: lesson.number) %>: <%= link_to_path_element lesson, mode: :plain %></h4>
    <ul class="progress-listing">
      <% lesson.exercises.each do |exercise| %>
        <li>
          <%= exercise_status_icon exercise %>
          <%= link_to_path_element(exercise) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<% if @chapter.links.present? %>
  <div>
    <h2><%= "Más información" %></h2>
    <%= @chapter.links_html %>
  </div>
<% end %>
