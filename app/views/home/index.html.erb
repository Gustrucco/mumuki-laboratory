<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><%=t('latest_exercises')%></div>
      <div class="panel-body">
        <table class="table">
          <%= render partial: 'exercise', collection: @latest_exercises %>
        </table>
        <%= link_to t('more'), exercises_path %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><%=t('hottest_exercises')%></div>
      <div class="panel-body">
        <table class="table">
          <%= render partial: 'exercise', collection: @hottest_exercises %>
        </table>
        <%= link_to t('more'), exercises_path %>
      </div>
    </div>
  </div>
</div>


<% if current_user? %>

    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading"><%=t('my_exercises')%></div>
          <div class="panel-body">
            <table class="table">
              <%= render partial: 'exercise', collection: @my_exercises %>
            </table>
            <%= link_to t('more'), exercises_path(owned_only: true) %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading"><%=t('my_submissions')%></div>
          <div class="panel-body">
            <table class="table">
              <%= render partial: 'submission', collection: @my_submissions %>
            </table>
            <%= link_to t('more'), submissions_path %>
          </div>
        </div>
      </div>
    </div>
<% end %>
