<div class="row">
  <div class="col-md-6">
    <%= render 'layouts/exercise_panel/panel',
               heading: t('latest_exercises'),
               exercises: @latest_exercises,
               more_link: exercises_path %>
  </div>
  <div class="col-md-6">
    <%= render 'layouts/exercise_panel/panel',
               heading: t('hottest_exercises'),
               exercises: @hottest_exercises,
               more_link: exercises_path %>
  </div>
</div>


<% if current_user? %>

    <div class="row">
      <div class="col-md-6">
        <%= render 'layouts/exercise_panel/panel',
                   heading: t('hottest_exercises'),
                   exercises: @hottest_exercises,
                   more_link: exercises_path(owned_only: true) %>
      </div>

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading"><%= t('my_submissions') %></div>
          <table class="table">
            <%= render partial: 'submission', collection: @my_submissions %>
          </table>
          <div class="panel-footer">
            <%= link_to t('more'), submissions_path %>
          </div>
        </div>
      </div>
    </div>
<% end %>
