<div class="row">
  <div class="col-md-6">
    <h2>Latest Exercises</h2>
    <%= render partial: 'exercise', collection: @latest_exercises %>
  </div>
  <div class="col-md-6">
    <h2>Hottest Exercises</h2>
        <%= render partial: 'exercise', collection: @hottest_exercises %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'More', exercises_path %>
  </div>
</div>

<% if current_user? %>
<div class="row">
  <div class="col-md-6">
    <h3>My Exercises</h3>
    <%= render partial: 'exercise', collection: @my_exercises %>
    <a href="#">More</a>
  </div>

  <div class="col-md-6">
    <h3>My Submissions</h3>

    <% @my_submissions.each do |submission| %>
        <div class="row">
          <div class="col-md-1">
            <%= submission.language %>
          </div>
          <div class="col-md-1">
            <%= submission.status %>
          </div>
          <div class="col-md-10">
            <%= link_to(time_ago_in_words(submission.created_at), [submission.exercise, submission])  %>
          </div>
        </div>
    <% end %>

    <a href="#">More</a>
  </div>
</div>
<% end %>
