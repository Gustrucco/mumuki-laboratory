<html>
<head>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body>
<style>
  body {
    zoom: 0.70;
  }
</style>
<div class="container">
  <div style="page-break-before:always;">
    <h1>El libro Mumuki de la Programación</h1>
    <smal>Libro generado a partir de <a href="http://mumuki.io">Mumuki</a> al <%= Time.new %></smal>
    <p><strong>Disclaimer</strong>: Todo el contenido aquí presentado pertenece a sus respectivos autores.</p>
  </div>

  <% Chapter.all.each do |chapter| %>
    <div style="page-break-before:always;">
      <h1><%= t(:chapter_number, number: chapter.number) %> <%= chapter.name %></h1>

      <%= chapter.long_description_html || chapter.description_html %>

      <h2><%= t :index %></h2>

      <% chapter.guides.each do |lesson| %>
        <h4><%= t(:guide_number, number: lesson.number) %>: <%= lesson.name %></h4>
        <ul class="progress-listing">
          <% lesson.exercises.each do |exercise| %>
            <li>
              <%= exercise.navigable_name %>
            </li>
          <% end %>
        </ul>
      <% end %>

      <% chapter.chapter_guides.each do |lesson| %>
        <div style="page-break-before:always;">
          <h2><%= t(:guide_number, number: lesson.number) %>: <%= lesson.name %></h2>
          <%= lesson.description_html %>
          <% lesson.exercises.each do |exercise| %>
            <h3><%= t(:exercise_number, number: exercise.number) %>: <%= exercise.name %></h3>

            <div class="exercise-assignment">
              <%= exercise.description_html %>
            </div>

            <% if exercise.hint_html %>
              <h4><%= fa_icon 'question-circle' %>  <%= t :hint %></h4>
              <%= exercise.hint_html %>
            <% end %>

            <% if exercise.corollary_html %>
              <h4><%= fa_icon 'trophy' %>  <%= t :corollary %></h4>
              <%= exercise.corollary_html %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<footer>
  <div style='text-align:center'>{#pageNum}/{#numPages}</div>
</footer>
</body>
</html>