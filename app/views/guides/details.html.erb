<%= render layout: 'layouts/guides', locals: {current_tab: :details} do %>
  <div>
    <% restricted_to_author(@guide) do %>
      Post commit hook:
      <pre><%= guide_imports_url(@guide) %></pre>
    <% end %>
  </div>

  <%= render 'layouts/exercise_panel/panel',
             heading: t(:exercise).pluralize,
             exercises: @guide.exercises,
             more_link: exercises_path(q: @guide.name) %>

  <%= render 'layouts/panel/panel',
             heading: t(:import).titleize.pluralize,
             items: @guide.imports,
             item_partial: 'import',
             more_link: '#' %>

  <div class="actions">
    <%= link_to t(:new_import), guide_imports_path(@guide), method: :post, class: 'btn btn-primary' %>
  </div>
<% end %>
