<div class="row">
  <table class="table">
    <thead>
    <tr>
      <th><%= t('title') %></th>
      <th><%= label(:guide, :github_repository) %></th>
      <th><%= t('created_at') %></th>
    </tr>
    </thead>

    <tbody>
    <% @guides.each do |guide| %>
        <tr>
          <td><%= link_to_guide guide %></td>
          <td><%= link_to_github guide %></td>
          <td><%= guide.created_at %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @guides %>
  </div>
  <br>
</div>
